{
  "name": "web3-college-backend",
  "version": "0.0.1",
  "description": "Web3 college Backend API",
  "author": "Web3 college",
  "private": true,
  "license": "UNLICENSED",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nest start --watch --env-file .env",
    "start:prod": "node dist/main --env-file=.env.production",
    "build": "nest build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "prepare": "echo 'Skipping husky'",
    "pre-commit": "lint-staged",
    "pre-push": "pnpm test && pnpm type-check"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^11.0.0",
    "@sentry/nestjs": "^10.21.0",
    "@sentry/profiling-node": "^10.21.0",
    "@vendia/serverless-express": "^4.12.6",
    "add": "^2.0.6",
    "aws-lambda": "^1.0.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "cookie-parser": "^1.4.6",
    "ethers": "^6.15.0",
    "express-rate-limit": "^8.1.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "nest-winston": "^1.10.2",
    "nodemailer": "^7.0.6",
    "passport-jwt": "^4.0.1",
    "passport-strategy": "^1.0.0",
    "pg": "^8.16.3",
    "pinata": "^2.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "siwe": "^3.0.0",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27",
    "winston": "^3.17.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.913.0",
    "@aws-sdk/s3-request-presigner": "^3.913.0",
    "@biomejs/biome": "^1.9.4",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/aws-lambda": "^8.10.145",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/cookie-parser": "^1.4.7",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.11.19",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "rimraf": "^6.0.1",
    "serverless": "^4.4.9",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^14.3.3",
    "serverless-plugin-typescript": "^2.1.5",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": ["**/*.(t|j)s"],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "pnpm": {
    "overrides": {
      "semver": "^7.5.4"
    },
    "ignoredBuiltDependencies": ["@nestjs/core"]
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "biome format --write",
      "biome lint --write --unsafe",
      "biome check --write --unsafe"
    ],
    "*.{json,md}": ["biome format --write"]
  }
}
